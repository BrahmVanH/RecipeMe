{{!-- this will display each recipe card if the user has created any recipes --}}
<div class="hero d-flex justify-content-center">
  <div id="carousel" class="carousel slide d-flex justify-content-center" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel" data-slide-to="0" class="active"></li>
      <li data-target="#carousel" data-slide-to="1"></li>
      <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="carousel-image d-block w-100" src="/images/carousel/pasta-carousel-1.jpg" alt="pasta">
      </div>
      <div class="carousel-item">
        <img class="carousel-image d-block w-100" src="/images/carousel/steak-carousel-2.jpg" alt="steak">
      </div>
      <div class="carousel-item">
        <img class="carousel-image d-block w-100" src="/images/carousel/chicken-carousel-3.jpg" alt="chicken">
      </div>
      <div class="carousel-item">
        <img class="carousel-image d-block w-100" src="../public/images/carousel/chickpea-carousel-4.jpg" alt="chickpea">
      </div>
      <div class="carousel-item">
        <img class="carousel-image d-block w-100" src="/images/carousel/porkchop-carousel-5.jpg" alt="porkchop">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

