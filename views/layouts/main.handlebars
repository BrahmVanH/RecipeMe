{{!-- html for the header and footer, and spaces to drop in the other templates/template items --}}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RecipeMe</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Delius&family=Delius+Swash+Caps&family=Work+Sans:ital,wght@0,200;0,300;0,400;0,600;0,800;1,200;1,300;1,600;1,700&display=swap" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <header>
    {{!-- TODO: Create header --}}
    <nav class="navbar d-flex flex-wrap">
      <a href="/" class="go-home"></a>
      {{!-- navbar links that display on the homepage--}}

      {{#if logged_in}}
      <div class="navbar-brand d-flex flex-wrap align-content-start">
        <div class="navbar-brand px-2 welcome" href="#">Hello, {{username}}!</div>
        <button type="button" class="navbar-brand" id="createRecipeBtn" data-toggle="modal" data-target="#createRecipeModal">Create a Recipe</button>

          <a class="navbar-brand px-2" href="/api/recipes/">View Recipes</a>
          <button type="button" class="navbar-brand" id="logOutBtn">Log Out</button>
        </div>
        {{else}}
        <div class="navbar-brand">
          <button type="button" class="navbar-brand px-2" id="signUpBtn" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
          {{!-- <a class="navbar-brand text-dark  ms-3" href="#">Sign Up</a> --}}
          <button type="button" class="navbar-brand px-2" id="LogInBtn" data-toggle="modal" data-target="#logInModal">Log In</button>
          {{!-- <a class="navbar-brand text-dark  ms-3" href="#">Log In</a> --}}
        </div>
        {{/if}}
      </div>
    </nav>
  </header>

  <main>
    <div class="allRecipes">
    {{> login-modal}}
    {{> create-account-modal}}
    {{> create-recipe-modal}}
    
    {{{ body }}}
    </div>
  </main>

  <footer>   
    <div class="footer m-0">
      <div class="row h-100 m-0">      
        <div class="col d-flex align-self-center align-items-center">
          <div>
            <a href="/" class="recipe-me p-3">RecipeMe</a>
          </div>
        </div>
        <div class="col align-self-center d-flex justify-content-end">
          <div class="github-links p-3">
            <img src="/images/github-mark.png" width="20" height="20" />
            <a class="footer-links" href="https://github.com/ndallich1">Nikki Dallich</a>
            <a class="footer-links" href="https://github.com/lsieck519">Laura Sieck</a>
            <a class="footer-links" href="https://github.com/BrahmVanH">Brahm Van Houzen</a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="/js/script.js"></script>
  <script src="/js/modals.js"></script>
</body>

</html>