                                    <input id="createUsernameInput" class="form-control" type="text" name="name" placeholder="Name" />
                                </div>
                                <div class="mb-3">
                                    <input id="emailInput" class="form-control" type="email" name="email" placeholder="Email" />
                                </div>
                                <div class="mb-3">
                                    <input id="createPasswordInput" class="form-control" type="password" placeholder="password"/>
                                </div>
                                <div>
                                    <button id="createAccountBtn" class="launch-button d-block w-60" type="submit">Create Account</button>
